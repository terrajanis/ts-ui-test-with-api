{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "pretty": true,
    "lib": ["es2016", "es2017", "dom"],
    "baseUrl": ".",
    "types": [
      "node",
      "./steps",
      "codeceptjs"
    ],
    "typeRoots": [
      "node",
      "steps",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "packages/*",
    "codecept.conf.js"
  ]
}